
<html lang="en">
    <%- include("../header/head") -%>
    <link rel="stylesheet" href="/css/font-awesome.css">
    <link rel="stylesheet" href="/css/style.css">

    <body class="background">
        <%- include("../header/navSpeaker") -%>
        <div class="container ">
            <form action="/speakers/updateProfile"  method="POST" class="text-center mt-5">
                <h1 style="color: teal;">Update Profile</h1>
               <input class="form-control" type="text" name="name" value="<%=profile.name%>"  style="width: 50%;margin: auto;"><br>
               <input class="form-control" type="number" name="age" value="<%=profile.age%>" placeholder="your age" required style="width: 50%;margin: auto;"><br>
               <input class="form-control" id="inputPassword4" type="password" name="password" value="<%=profile.password%>" placeholder="password" required style="width: 50%;margin: auto;"><br>
               <span toggle="#inputPassword4" class="fa fa-fw fa-eye field-icon toggle-password" style="cursor:pointer;position: absolute;left: 65%;top: 39.5%;z-index: 2555555;color: #10100f;font-size: 19px;"></span>
               <input class="form-control"  type="text" name="address.city" value="<%=profile.address.city%>"  placeholder="city" required style="width: 50%;margin:5px auto;">
               <input class="form-control" type="number" name="address.street"  value="<%=profile.address.street%>" placeholder="street" required style="width: 50%;margin:5px auto;">
               <input class="form-control"  type="number" name="address.building"  value="<%=profile.address.building%>" placeholder="buildingNo" required style="width: 50%;margin:5px auto;"><br>
               <input class="form-control bg-primary text-light"  type="submit" value="Save" style="width: 50%;margin: auto;"><br>
        
            </form>
        </div>
    
        <%- include("../header/script") -%>
        <script>
            $(".toggle-password").click(function() {
  
                  $(this).toggleClass("fa-eye fa-eye-slash");
                  var input = $($(this).attr("toggle"));
                  if (input.attr("type") == "password") {
                  input.attr("type", "text");
                  } else {
                  input.attr("type", "password");
                  }
                  });
            </script>
    </body>
    </html>