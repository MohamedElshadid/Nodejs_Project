<%- include("../header/navbar") -%>
<html lang="en">
    <%- include("../header/head") -%>
    
    <body >
        <div class="container ">
            
            <form method="POST" action="/events/update">


                 
                <h2 class="text-danger">Edit Event</h2>
                
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>Event ID</label>
                            <input type="text" class="form-control" name="_id" value="<%=event._id%>" readonly>
                        </div>
                        <div class="form-group">
                            <label>Event Name</label>
                            <input type="text" name="title" id="title" value="<%=event.title%>"   class="form-control " style="width: 400px;"  >
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>Event Date</label>
                            <input type="date" name="eventData" id="date" value="<%= moment(event.date).utc().format('YYYY-MM-DD')%>"   class="form-control" style="width: 400px;" placeholder="event date" >
                        </div>
                    </div>
                </div>

                <select name="mainSpeaker" class="form-control form-group" style="width: 200px;" id="exampleFormControlSelect1">
                   
                    <% speakers.forEach((speaker) => { %>
                        <% if(speaker._id){ %>
                        <% if(event.mainSpeaker && speaker._id == event.mainSpeaker._id){ %>
                        <option selected  value="<%=speaker._id%>"> <%=speaker.name%></option>
                        <%}else { %>
                        <option  value="<%=speaker._id%>"> <%=speaker.name%></option>
                        <%} }%>
                    <% }) %>
                  </select>
                  <br>
                  <br>
              
                <select name="otherSpeakers" multiple class="form-control form-group" style="width: 200px;" id="exampleFormControlSelect2">
                    
                                
                    <% speakers.forEach((speaker) => { %>
                        <% if(event.otherSpeakers.find((data)=> data._id == speaker._id)){ %>
                        <option selected  value="<%=speaker._id%>"> <%=speaker.name%></option>
                        <%}else { %>
                        <option  value="<%=speaker._id%>"> <%=speaker.name%></option>
                        <%} %>
                    <% }) %>

                   
                  </select>

                
               
                <div class="row">
                    
                    <div class="col-xs-12"><button class=" btn bg-primary ml-4" type="submit">submit</button></div>
                
                </div>
                
            </form>
        </div>
    
        <%- include("../header/script") -%>
    </body>
    </html>